
{
  "compilerOptions": {
    "outDir": "built",
    "rootDir": "src",
    "allowJs": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "strict": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*"],
  "exclude": ["__test__"]
}
